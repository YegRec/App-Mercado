<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMercado.MainPage">
    
    <StackLayout Padding="20">

        <!-- Título -->
        <Label Text="Lista de Productos"
               FontSize="24"
               HorizontalOptions="Center" />

        <!-- Área de texto para ingresar productos y precios -->
        <Editor x:Name="ProductEditor"
                Placeholder="Escribe los productos y precios aquí (ej: Manzana 200.00)"
                AutoSize="TextChanges"
                TextChanged="OnTextChanged"
                HeightRequest="300"
                Margin="0,10" />

        <!-- Mostrar el total -->
        <Label x:Name="TotalLabel"
               Text="Total: $0.00"
               FontSize="18"
               HorizontalOptions="Center"
               Margin="0,20" />
    </StackLayout>

</ContentPage>
